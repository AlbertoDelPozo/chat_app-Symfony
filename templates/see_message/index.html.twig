{% extends 'base.html.twig' %}

{% block title %}Message
{% endblock %}

{% block body %}
	<nav
		class="navbar navbar-dark bg-dark d-flex justify-content-center">
		<a href=" {{ path('inbox') }} " class="btn btn-outline-info ms-3">Inbox</a>
		<a href=" {{ path('outbox') }} " class="btn btn-outline-info ms-3">Outbox</a>
		<a href=" {{ path('send_message') }} " class="btn btn-outline-success ms-3">Send Message</a>
		<a href=" {{ path('profile') }} " class="btn btn-outline-warning ms-3">Profile</a>
		<a href=" {{ path('app_logout') }} " class="btn btn-outline-danger ms-3">Logout</a>
	</nav>

	<div class="card-body" style="width: 18rem;">
					<div>
						

							
								<h6 class="card-title">{{ users.email }}</h6>
							

						<p class="card-text">{{ message[0].message }}</p>

						{% if message[0].isread == 0 %}
							<i class="fas fa-envelope"></i>
						{% else %}
							<i class="fas fa-envelope-open"></i>
						{% endif %}


					</div>
{% endblock %}
