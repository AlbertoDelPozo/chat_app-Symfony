{% extends 'base.html.twig' %}

{% block title %}Inbox
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<nav
		class="navbar navbar-dark bg-dark d-flex justify-content-center">
		{# <a href=" {{  }} ">Send Message</a> #}
		<a href=" {{ path('outbox') }} " class="btn btn-outline-info">Outbox</a>
		<a href=" {{ path('send_message') }} " class="btn btn-outline-success mx-3">Send Message</a>
		<a href=" {{ path('app_logout') }} " class="btn btn-outline-danger mx-3">Logout</a>
	</nav>


	<div class="d-flex justify-content-center">
		<h1>Inbox</h1>

		{% for message in inbox_message %}
			<div class="card" style="width: 18rem;">
				<div class="card-body">
					<h5 class="card-title">{{ message.sender }}</h5>
					<h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
					<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
					<a href="#" class="card-link">Card link</a>
					<a href="#" class="card-link">Another link</a>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
