{% extends 'base.html.twig' %}

{% block title %}Outbox
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<nav
		class="navbar navbar-dark bg-dark d-flex justify-content-center">
		{# <a href=" {{  }} ">Send Message</a> #}
		<a href=" {{ path('inbox') }} " class="btn btn-outline-info">Inbox</a>
		<a href=" {{ path('send_message') }} " class="btn btn-outline-success mx-3">Send Message</a>
		<a href=" {{ path('app_logout') }} " class="btn btn-outline-danger">Logout</a>
	</nav>

	<div class="d-flex flex-column justify-content-center align-items-center mt-2">
		<h1>Outbox</h1>

		{% for message in outbox_message %}
			<div class="card mb-2" style="width: 18rem;">
				<div class="card-body">
					<h5 class="card-title">{{ message.reciver }}</h5>
					<p class="card-text">{{ message.message }}</p>

					{# {% if message.is_Read == false %}
											<i class="fas fa-envelope"></i>
										{% else %}
											<i class="fas fa-envelope-open"></i>
										{% endif %} #}


				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
