{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div class="d-flex flex-column justify-content-center align-items-center mt-2">
		<h1>User</h1>
	</div>
	<table class="table table-dark table-hover">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr>
			<tr>
				<th>Tlf</th>
				<td>{{ user.Tlf }}</td>
			</tr>
			<tr>
				<th>Street</th>
				<td>{{ user.Street }}</td>
			</tr>
		</tbody>
	</table>
	<div class="d-flex flex-column justify-content-center align-items-center mt-2">
		<a href="{{ path('admin_index') }}" class="btn btn-info ms-3 mb-3">Back To List</a>
	</div>
	{# {{ include('admin/_delete_form.html.twig') }} #}
{% endblock %}
